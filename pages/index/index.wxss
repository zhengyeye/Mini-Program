/**index.wxss**/

.user {
  border-bottom: 2px solid lightgrey;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: left;
  margin-left: 30rpx;
  padding-bottom: 10rpx;
}

.userinfo button {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  padding-top: 5rpx;
  background-color: lightsalmon;
  color: #fff
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin: 35rpx;
}

.address {
  margin-left: 30rpx;
  margin-bottom: 15rpx;
}

/* 轮播图 */

.slide-image {
  width: 100%;
  height: 100%;
  padding-top: 20rpx;
}

.wishes {
  align-items: center;
}

.wishes-start {
  margin-top: 50rpx;
  text-align: center;
}

.end-container {
  margin-left: 30rpx;
  margin-right: 15rpx;
}

.comments-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  color: #eef;
  margin-bottom: 50rpx;
  margin-top: 20rpx;
}

.comments-view text{
   border: 1px solid #eef;
   background-color: #f60
}